package rmfjaskfkd.naver.com.mainlauncherapp;

import android.app.AlertDialog;
import android.content.Context;
import android.content.DialogInterface;
import android.content.Intent;
import android.database.Cursor;
import android.database.sqlite.SQLiteDatabase;
import android.graphics.Bitmap;
import android.graphics.BitmapFactory;
import android.net.Uri;
import android.os.Environment;
import android.provider.MediaStore;
import android.support.v7.app.AppCompatActivity;
import android.os.Bundle;
import android.util.Log;
import android.view.View;
import android.widget.Button;
import android.widget.EditText;
import android.widget.ImageView;
import android.widget.TextView;
import android.widget.Toast;

import java.io.File;
import java.io.FileOutputStream;
import java.io.InputStream;
import java.text.SimpleDateFormat;
import java.util.Date;
//회원관리 앱 내부의 회원가입 액티비티
public class MemberUpdate extends AppCompatActivity {
    //바인딩
    Button capture;
    Button digupdate;
    Button digclose;
    Button find;
    TextView imagePath;
    EditText idedit;
    EditText nameedit;
    EditText passedit;

    final Context context = this;
    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_memberupdate);
        //바인딩
        digupdate = findViewById(R.id.digupdate);
        digclose = findViewById(R.id.digclose);
        capture = findViewById(R.id.capture);
        find = findViewById(R.id.find);
        imagePath = findViewById(R.id.imagePath);
        idedit = findViewById(R.id.idedit);
        nameedit = findViewById(R.id.nameedit);
        passedit = findViewById(R.id.passedit);
        //버튼 설정
        digupdate.setOnClickListener(bclick);
        digclose.setOnClickListener(bclick);
        capture.setOnClickListener(bclick);
        find.setOnClickListener(bclick);
    }
    //클릭 리스너에 버튼에 따른 동작 수행 설정
    Button.OnClickListener bclick = new Button.OnClickListener() {
        @Override
        public void onClick(View v) {
            switch (v.getId()) {
                case R.id.digupdate:
                    insertMember();
                    break;
                case R.id.digclose:
                    finish();
                    break;
                case R.id.capture:
                    takePhoto();
                    break;
                case R.id.find:
                    findPhoto();
                    break;
            }
        }
    };
    //텍스트 창에 입력 후 확인 과정까지
    private void insertMember() {
        String chkmsg = "- 입력시 필수사항 -\n\n";
        if (idedit.getText().toString().equals(""))
            chkmsg +="아이디를 입력하세요!\n";
        if (nameedit.getText().toString().equals(""))
            chkmsg +="이름를 입력하세요!\n";
        if (passedit.getText().toString().equals(""))
            chkmsg +="비밀번호를 입력하세요!\n";
        AlertDialog.Builder alert= new AlertDialog.Builder(context);
        if(chkmsg.equals("- 입력시 필수사항 -\n\n")) {
            alert.setMessage("저장하시겠습니까?");
            alert.setCancelable(false);
            alert.setPositiveButton("취소", new DialogInterface.OnClickListener() {
                @Override
                public void onClick(DialogInterface dialog, int which) {
                    dialog.cancel();
                }
            });
            alert.setNegativeButton("확인", new DialogInterface.OnClickListener() {
                @Override
                public void onClick(DialogInterface dialog, int which) {
                    insertDB();
                }
            });
        } else  {
            alert.setMessage(chkmsg);
            alert.setCancelable(false);
            alert.setPositiveButton("확인", new DialogInterface.OnClickListener() {
                @Override
                public void onClick(DialogInterface dialog, int which) {
                    dialog.cancel();
                    return;
                }
            });
        }
        AlertDialog alertDialog = alert.create();
        alertDialog.show();
    }
    //확인한 정보를 DB에 입력하는 메소드
    private void insertDB() {
        SQLiteDAO obj = new SQLiteDAO(this);
        SQLiteDatabase db = obj.getWritableDatabase();
        //입력할 DB 명령어
        StringBuilder sql = new StringBuilder();
        sql.append("insert into member(");
        sql.append("name,passwd,image");
        sql.append(")values(");
        sql.append(" '"+ nameedit.getText().toString()+"',");
        sql.append(" '"+ passedit.getText().toString()+"',");
        sql.append(" '"+ imagePath.getText().toString()+"'");
        sql.append(")");
        try {
            db.execSQL(sql.toString());
            Intent intent = new Intent();
            setResult(105,intent);
            finish();
        } catch (Exception e) {
            Log.d("DB insert err:"+e.getMessage(),"error:"+e.getMessage());
        }
    }
    //카메라를 불러온 후 사진을 찍는 메소드
    private void takePhoto() {
        Intent intent = new Intent(MediaStore.ACTION_IMAGE_CAPTURE);
        if (intent.resolveActivity(getPackageManager()) != null) {
            startActivityForResult(intent, 101);
        }
    }
    //갤러리의 사진을 찾아서 보여주기
    private void findPhoto() {
        Intent intent = new Intent();
        intent.setType("image/*");
        intent.setAction(Intent.ACTION_GET_CONTENT);
        startActivityForResult(intent, 102);
    }
    //사진을 찍은 후 변환하기(지정된 폴더가 없을 시 자동만들기 포함)
    public File createImageFile() {
        String timeStamp = new SimpleDateFormat("yyyyMMdd_HHmmss").format(new Date());
        String imageFileName = "JPEG_" + timeStamp + ".jpg";
        File imageFile = null;
        File storageDir = new File(Environment.getExternalStorageDirectory() + "/Pictures", "files");

        if (!storageDir.exists()) {
            storageDir.mkdirs();
        }
        imageFile = new File(storageDir, imageFileName);
        return imageFile;
    }
    //ActivityForResult를 실행시 작업을 처리하는 메소드
    @Override
    protected void onActivityResult(int requestCode, int resultCode, Intent data) {
        //사진을 찍은 후 변환해서 저장
        if (requestCode == 101 && resultCode == RESULT_OK) {
            Bundle extras = data.getExtras();
            Bitmap imageBitmap = (Bitmap) extras.get("data");
            imageBitmap=bitmapResize(imageBitmap);
            ((ImageView) findViewById(R.id.image00)).setImageBitmap(imageBitmap);
            File savingfile = createImageFile();
            //찍은 사진의 경로 스트링으로 가져오기
            imagePath.setText(savingfile.toString());
            try {
                FileOutputStream fos = new FileOutputStream(savingfile);
                imageBitmap.compress(Bitmap.CompressFormat.JPEG, 100, fos);
                fos.flush();
                fos.close();
            } catch (Exception e) {
                e.printStackTrace();
            }
        }
        //찾기에서 찾은 사진을 바로 맨 위에 이미지 뷰에 집어넣기
        if (requestCode == 102 && resultCode == RESULT_OK) {
            try {
                InputStream in = getContentResolver().openInputStream(data.getData());
                Bitmap bitimage = BitmapFactory.decodeStream(in);
                ((ImageView) findViewById(R.id.image00)).setImageBitmap(bitimage);
                //선택된 이미지를 이미지뷰에 세팅
                Uri originalUri = data.getData();
                String pathsegment[] = originalUri.getLastPathSegment().split(":");
                String id = pathsegment[0];
                String[] imageColumns = { MediaStore.Images.Media.DATA };

                Cursor imageCursor = getContentResolver().query(originalUri, imageColumns,
                        MediaStore.Images.Media._ID + "=" + id, null, null);
                String realPath="";

                if (imageCursor.moveToFirst()) {
                    realPath = imageCursor.getString(imageCursor.getColumnIndex(MediaStore.Images.Media.DATA));
                }
                imagePath.setText(realPath);

                in.close();
            } catch (Exception e) {
            }
        }
    }
    //찍은 사진의 크기를 줄이는 메소드
    private Bitmap bitmapResize(Bitmap bitmap) {
        int MAX_ALLOWED_RESOLUTION = 1024;
        int outWidth;
        int outHeight;
        int inWidth = bitmap.getWidth();
        int inHeight = bitmap.getHeight();
        if(inWidth > inHeight){
            outWidth = MAX_ALLOWED_RESOLUTION;
            outHeight = (inHeight * MAX_ALLOWED_RESOLUTION) / inWidth;
        } else {
            outHeight = MAX_ALLOWED_RESOLUTION;
            outWidth = (inWidth * MAX_ALLOWED_RESOLUTION) / inHeight;
        }
        Bitmap resizedBitmap = Bitmap.createScaledBitmap(bitmap, outWidth, outHeight, false);
        return resizedBitmap;
    }
}

