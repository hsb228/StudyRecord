<SQLiteDAO.java(incomplete)>

=========================================================================================================================================

package rmfjaskfkd.naver.com.mainlauncherapp;

import android.content.Context;
import android.database.sqlite.SQLiteDatabase;
import android.database.sqlite.SQLiteOpenHelper;
import android.util.Log;
//데이터베이스 내의 테이블 생성과 수정을 동시에 수행해주는 DAO
public class SQLiteDAO extends SQLiteOpenHelper {
    private static final String DATABASE_NAME = "deeplearn.db";
    private static final int DATABASE_VERSION = 4;
    private Context mContext;
    public SQLiteDAO(Context context) {
        super(context, DATABASE_NAME, null, DATABASE_VERSION);
        mContext = context;
    }
    //새로 테이블을 생성시
    @Override
    public void onCreate(SQLiteDatabase db) {
        Log.d("->onCreate","->onCreate");
        StringBuilder sb = new StringBuilder();
        sb.append("create table member (_id INTEGER PRIMARY KEY AUTOINCREMENT,");
        sb.append("name varchar,passwd varchar,image varchar)");
        db.execSQL(sb.toString());
    }
    //기존의 테이블을 업데이트 할 시(database version을 바꿔줘야 작동)
    @Override
    public void onUpgrade(SQLiteDatabase db, int oldVersion, int newVersion) {
        db.execSQL("drop table if exists member");
        Log.d("->onUpgrade","->onUpgrade");
        onCreate(db);
    }
}

