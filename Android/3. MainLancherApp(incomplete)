package rmfjaskfkd.naver.com.mainlauncherapp;

import android.content.Intent;
import android.os.Bundle;
import android.support.design.widget.FloatingActionButton;
import android.support.design.widget.Snackbar;
import android.support.v7.app.AppCompatActivity;
import android.support.v7.widget.Toolbar;
import android.util.Log;
import android.view.View;
import android.view.Menu;
import android.view.MenuItem;
import android.widget.Button;
import android.widget.ImageView;

public class MainActivity extends AppCompatActivity {
    ImageView image1;
    ImageView image2;
    ImageView image3;
    ImageView image4;
    ImageView image5;
    ImageView image6;
    ImageView image7;
    ImageView image8;
    ImageView image9;

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_main);
        image1 = findViewById(R.id.image1);
        image2 = findViewById(R.id.image2);
        image3 = findViewById(R.id.image3);
        image4 = findViewById(R.id.image4);
        image5 = findViewById(R.id.image5);
        image6 = findViewById(R.id.image6);
        image7 = findViewById(R.id.image7);
        image8 = findViewById(R.id.image8);
        image9 = findViewById(R.id.image9);
        image1.setOnClickListener(bClick);
        image2.setOnClickListener(bClick);
        image3.setOnClickListener(bClick);
        image4.setOnClickListener(bClick);
        image5.setOnClickListener(bClick);
        image6.setOnClickListener(bClick);
        image7.setOnClickListener(bClick);
        image8.setOnClickListener(bClick);
        image9.setOnClickListener(bClick);
    }
    Button.OnClickListener bClick = new Button.OnClickListener(){

        @Override
        public void onClick(View v) {
            switch (v.getId()) {
                case R.id.image1:
                    Intent intent1 = new Intent(MainActivity.this, IntentActivity.class);
                    MemberBean data = new MemberBean();
                    data.setEmail("kor@naver.com");
                    data.setName("korea");
                    data.setPassword("1111");
                    Bundle bundle = new Bundle();
                    bundle.putSerializable("data", data);
                    intent1.putExtras(bundle);
                    startActivity(intent1);
                    break;
                case R.id.image2:
                    Intent intent2 = new Intent(MainActivity.this, IntentForResultActivity.class);
                    startActivity(intent2);
                    break;
                case R.id.image3:
                    Intent intent3 = new Intent(MainActivity.this, AsyncTaskActivity.class);
                    startActivity(intent3);
                    break;
                case R.id.image4:
                    Intent intent4 = new Intent(MainActivity.this, ProgressBarActivity.class);
                    startActivity(intent4);
                    break;
                case R.id.image5:
                    Intent intent5 = new Intent(MainActivity.this, CameraControlActivity.class);
                    startActivity(intent5);
                    break;
                case R.id.image6:
                    Intent intent6 = new Intent(MainActivity.this, GestureActivity.class);
                    startActivity(intent6);
                    break;
                case R.id.image7:
                    Intent intent7 = new Intent(MainActivity.this, ZoomTextActivity.class);
                    startActivity(intent7);
                    break;
                case R.id.image8:
                    Intent intent8 = new Intent(MainActivity.this, ListViewActivity.class);
                    startActivity(intent8);
                    break;
                case R.id.image9:
                    Intent intent9 = new Intent(MainActivity.this, MemberActivity.class);
                    startActivity(intent9);
                    break;
            }
        }
    };
    @Override
    public void onActivityResult(int requestCode, int resultCode,Intent data) {
        if (resultCode == 102) {
            MemberBean bean = (MemberBean) data.getSerializableExtra("member");
            Log.d("-->" + bean.getEmail(), "--->");
            Log.d("-->" + bean.getName(), "--->");
        }
    }
}
