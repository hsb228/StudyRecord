package rmfjaskfkd.naver.com.mainlauncherapp;

import android.app.AlertDialog;
import android.content.Context;
import android.content.DialogInterface;
import android.content.Intent;
import android.database.Cursor;
import android.database.sqlite.SQLiteDatabase;
import android.graphics.Bitmap;
import android.graphics.BitmapFactory;
import android.net.Uri;
import android.os.Environment;
import android.provider.MediaStore;
import android.support.v7.app.AppCompatActivity;
import android.os.Bundle;
import android.util.Log;
import android.view.LayoutInflater;
import android.view.View;
import android.widget.AdapterView;
import android.widget.Button;
import android.widget.EditText;
import android.widget.ImageView;
import android.widget.ListAdapter;
import android.widget.ListView;
import android.widget.SimpleAdapter;
import android.widget.TextView;
import android.widget.Toast;

import java.io.File;
import java.io.FileOutputStream;
import java.io.InputStream;
import java.text.SimpleDateFormat;
import java.util.ArrayList;
import java.util.Date;
import java.util.HashMap;

//회원관리 앱의 메인 액티비티
public class MemberActivity extends AppCompatActivity {
    Button input;
    Button close;
    Context context;
    AlertDialog alertDialog;
    ListView listView;
    TextView imagePath;
    ImageView image;
    EditText Id;
    EditText Name;
    EditText Passwd;
    View alertLayout;
    LayoutInflater inflater;


    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_member);
        input = findViewById(R.id.input);
        close = findViewById(R.id.close);

        inflater = getLayoutInflater();
        alertLayout = inflater.inflate(R.layout.activity_memberupdate, null);

        image = alertLayout.findViewById(R.id.image00);
        imagePath =alertLayout.findViewById(R.id.imagePath);
        Id = alertLayout.findViewById(R.id.idedit);
        Name = alertLayout.findViewById(R.id.nameedit);
        Passwd = alertLayout.findViewById(R.id.passedit);

        context = MemberActivity.this;
        listView = findViewById(R.id.listview);
        input.setOnClickListener(click);
        close.setOnClickListener(click);

        //리스트뷰
        SQLiteDAO obj = new SQLiteDAO(this);
        SQLiteDatabase db = obj.getReadableDatabase();
        String sql = "select * from member";
        Cursor cursor = db.rawQuery(sql, null);
        final ArrayList<HashMap<String, String>> userList = new ArrayList<>();
        HashMap<String, String> data;
        while (cursor.moveToNext()) {
            data = new HashMap<>();
            data.put("_id", cursor.getString(0));
            data.put("name", cursor.getString(1));
            data.put("passwd", cursor.getString(2));
            data.put("image", cursor.getString(3));
            userList.add(data);
        }
        cursor.close();
        ListAdapter adapter = new SimpleAdapter(MemberActivity.this, userList, R.layout.member_list_row, new String[]{"_id", "name", "passwd", "image"},
                new int[]{R.id.rowid, R.id.rowname, R.id.rowpasswd, R.id.rowimage});
        listView.setAdapter(adapter);
        listView.setClickable(true);
        listView.setOnItemClickListener(new AdapterView.OnItemClickListener() {
            @Override
            public void onItemClick(AdapterView<?> parent, View view, int position, long id) {
                memberGet(userList.get(position).get("_id"));
            }
        });
    }

    private void memberGet(String selected) {
            SQLiteDAO obj = new SQLiteDAO(this);
            SQLiteDatabase db = obj.getReadableDatabase();
            int key = Integer.parseInt(selected);
            String sql = "select * from member where _id=" + key + " ";
            Cursor cursor = db.rawQuery(sql, null);
            MemberBean data = new MemberBean();
            if (cursor.moveToNext()) {
                data.setId(cursor.getInt(0));
                data.setName(cursor.getString(1));
                data.setPasswd(cursor.getString(2));
                data.setImage(cursor.getString(3));
        }
        cursor.close();

        Button digclose = alertLayout.findViewById(R.id.digclose);
        Button digupdate = alertLayout.findViewById(R.id.digupdate);
        Button capture = alertLayout.findViewById(R.id.capture);
        Button find = alertLayout.findViewById(R.id.find);

        Id.setText(data.getId() + "");
        Id.setEnabled(false);
        Name.setText(data.getName().toString());
        Passwd.setText(data.getPasswd());
        imagePath.setText(data.getImage());
        File imgFile = new File(data.getImage());
        if (imgFile.exists()) {
            Bitmap myBitmap = BitmapFactory.decodeFile(imgFile.getAbsolutePath());
            image.setImageBitmap(myBitmap);
        }
            AlertDialog.Builder alert = new AlertDialog.Builder(context);
            alert.setTitle("Member Update");
            alert.setView(alertLayout);
            alert.setCancelable(false);
            alertDialog = alert.create();
            alertDialog.show();
            digclose.setOnClickListener(aclick);
            digupdate.setOnClickListener(aclick);
            capture.setOnClickListener(aclick);
            find.setOnClickListener(aclick);
    }

    Button.OnClickListener aclick = new Button.OnClickListener() {
        @Override
        public void onClick(View v) {
            switch (v.getId()) {
                case R.id.digclose:
                    alertDialog.dismiss();
                    break;
                case R.id.digupdate:
                    memberupdate();
                    break;
                case R.id.capture:
                    takePhoto();
                    break;
                case R.id.find:
                    findPhoto();
                    break;
            }
        }
    };
    Button.OnClickListener click = new Button.OnClickListener() {
        @Override
        public void onClick(View v) {
            switch (v.getId()) {
                case R.id.input:
                    Intent intent1 = new Intent(MemberActivity.this, MemberUpdate.class);
                    startActivityForResult(intent1,500);
                    break;
                case R.id.close:
                    finish();
                    break;
            }
        }
    };
    private void takePhoto() {
        Intent intent = new Intent(MediaStore.ACTION_IMAGE_CAPTURE);
        if (intent.resolveActivity(getPackageManager()) != null) {
            startActivityForResult(intent, 101);
        }
    }
    public File createImageFile() {
        String timeStamp = new SimpleDateFormat("yyyyMMdd_HHmmss").format(new Date());
        String imageFileName = "JPEG_" + timeStamp + ".jpg";
        File imageFile = null;
        File storageDir = new File(Environment.getExternalStorageDirectory() + "/Pictures", "files");

        if (!storageDir.exists()) {
            storageDir.mkdirs();
        }
        imageFile = new File(storageDir, imageFileName);
        return imageFile;
    }
    private void findPhoto() {
        Intent intent = new Intent();
        intent.setType("image/*");
        intent.setAction(Intent.ACTION_GET_CONTENT);
        startActivityForResult(intent, 102);
    }
    //ActivityForResult를 실행시 작업을 처리하는 메소드
    @Override
    protected void onActivityResult(int requestCode, int resultCode, Intent data) {
        //사진을 찍은 후 변환해서 저장
        if (requestCode == 101 && resultCode == RESULT_OK) {
            Bundle extras = data.getExtras();
            Bitmap imageBitmap = (Bitmap) extras.get("data");
            imageBitmap=bitmapResize(imageBitmap);
            image.setImageBitmap(imageBitmap);
            File savingfile = createImageFile();
            //찍은 사진의 경로 스트링으로 가져오기
            imagePath.setText(savingfile.toString());
            try {
                FileOutputStream fos = new FileOutputStream(savingfile);
                imageBitmap.compress(Bitmap.CompressFormat.JPEG, 100, fos);
                fos.flush();
                fos.close();
            } catch (Exception e) {
                e.printStackTrace();
            }
        }
        if (requestCode == 102 && resultCode == RESULT_OK) {
            try {
                InputStream in = getContentResolver().openInputStream(data.getData());
                Bitmap bitimage = bitmapResize(BitmapFactory.decodeStream(in));

                image.setImageBitmap(bitimage);
                Uri originalUri = data.getData();

                Cursor imageCursor = getContentResolver().query(originalUri,null,null,  null, null);
                String realPath = "";

                if (imageCursor == null) {
                    realPath = originalUri.getPath();
                } else {
                    imageCursor.moveToFirst();
                    int idx = imageCursor.getColumnIndex(MediaStore.Images.ImageColumns.DATA);
                    Log.d("", "column:"+imageCursor.getColumnIndex(MediaStore.Images.ImageColumns.DATA));
                    realPath = imageCursor.getString(idx);
                }
                imagePath.setText(realPath);
                imageCursor.close();
                in.close();
            } catch (Exception e) {
            }
        }
        if(requestCode == 105 && resultCode == 105 ) {
            Membershow();
        }
    }
    private Bitmap bitmapResize(Bitmap bitmap) {
        int MAX_ALLOWED_RESOLUTION = 1024;
        int outWidth;
        int outHeight;
        int inWidth = bitmap.getWidth();
        int inHeight = bitmap.getHeight();
        if(inWidth > inHeight){
            outWidth = MAX_ALLOWED_RESOLUTION;
            outHeight = (inHeight * MAX_ALLOWED_RESOLUTION) / inWidth;
        } else {
            outHeight = MAX_ALLOWED_RESOLUTION;
            outWidth = (inWidth * MAX_ALLOWED_RESOLUTION) / inHeight;
        }
        Bitmap resizedBitmap = Bitmap.createScaledBitmap(bitmap, outWidth, outHeight, false);
        return resizedBitmap;
    }
    private void memberupdate() {
        AlertDialog.Builder alt_bld = new AlertDialog.Builder(this);
        alt_bld.setMessage("수정하시겠습니까 ?").setCancelable(false)
                .setPositiveButton("No",
                new DialogInterface.OnClickListener() {
            @Override
            public void onClick(DialogInterface dialog, int which) {
                dialog.cancel();
            }
                }).setNegativeButton("Yes",
                new DialogInterface.OnClickListener() {
                    public void onClick(DialogInterface dialog, int id) {
                        memberUpdateDB();
                        dialog.cancel();
                        Intent intent = new Intent(MemberActivity.this,MemberActivity.class);
                        startActivity(intent);
                    }
                });
        AlertDialog alert = alt_bld.create();
        // Title for AlertDialog
        alert.setTitle("Update");
        alert.setIcon(R.drawable.update);
        // Icon for AlertDialog
        alert.show();
    }
    private void memberUpdateDB() {
        SQLiteDAO obj = new SQLiteDAO(this);
        SQLiteDatabase db = obj.getWritableDatabase();
        int key = Integer.parseInt(Id.getText().toString());
        StringBuilder sql =  new StringBuilder();
        sql.append("update member set ");
        sql.append("name='"+Name.getText().toString()+"',");
        sql.append("passwd='"+Passwd.getText().toString()+"',");
        sql.append("image='"+imagePath.getText().toString()+"' ");
        sql.append("where _id="+key+" ");
        db.execSQL(sql.toString());
    }
    @Override
    public void onResume() {
        super.onResume();
        Toast.makeText(MemberActivity.this,"Resume...",Toast.LENGTH_SHORT).show();
    }
    public void Membershow() {
        SQLiteDAO obj = new SQLiteDAO(this);
        SQLiteDatabase db = obj.getReadableDatabase();
        String sql = "select * from member";
        Cursor cursor = db.rawQuery(sql, null);
        final ArrayList<HashMap<String, String>> userList = new ArrayList<>();
        HashMap<String, String> data;
        while (cursor.moveToNext()) {
            data = new HashMap<>();
            data.put("_id", cursor.getString(0));
            data.put("name", cursor.getString(1));
            data.put("passwd", cursor.getString(2));
            data.put("image", cursor.getString(3));
            userList.add(data);
        }
        cursor.close();
        ListAdapter adapter = new SimpleAdapter(MemberActivity.this, userList, R.layout.member_list_row, new String[]{"_id", "name", "passwd", "image"},
                new int[]{R.id.rowid, R.id.rowname, R.id.rowpasswd, R.id.rowimage});
        listView.setAdapter(adapter);
        listView.setClickable(true);
        listView.setOnItemClickListener(new AdapterView.OnItemClickListener() {
            @Override
            public void onItemClick(AdapterView<?> parent, View view, int position, long id) {
                memberGet(userList.get(position).get("_id"));
            }
        });
    }
}

