//<for문을 이용한 간략화>

package finalnotepackage;

public class ArrayForNote {
	public static void main(String[] args) {
		int[] arr = new int[10];
		for (int i = 0; i < arr.length; i++) {
			arr[i] = i;
		}
		for (int i = 0; i < arr.length; i++) {
			System.out.println(arr[i]);
		}
	}
}

/*<향상된 for 문>
-주의: 대입자가 있으면 사용이 불가능하다.
참고)p.95*/
package finalnotepackage;

public class ImprovedForArrayNote {

	public static void main(String[] args) {
		int[] arr = new int[10];
		for(int i=0; i<arr.length ;i++ ) {
			arr[i]=i;
		}
		for(int arr1:arr) {
			System.out.print(arr1+"  ");	
    }
}

//<for문으로 배열의 합 구하기>

package finalnotepackage;

public class ForcommandSumNote {
	public static void main(String[] args) {
		int[] arr = new int[10];
		int sum = 0;
		for (int i = 0; i < arr.length; i++) {
			sum += i;
		}
		System.out.println(sum);
	}
}

//<for문으로 1부터 10까지 합치기>

package finalnotepackage;

public class ForOnetoTenSumNote {

	public static void main(String[] args) {
		int sum = 0;
		for (int i = 1; i < 11; i++) {
			sum += i;
		}
		System.out.println(sum);
	}
}
